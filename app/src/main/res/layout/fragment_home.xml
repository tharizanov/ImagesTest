<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.test2.app.ui.fragments.home.HomeVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/home_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onSearchButtonClick()}"
            android:text="@string/home_search_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/home_search_input"
            android:layout_width="@dimen/no_dimen"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            app:layout_constraintBottom_toBottomOf="@id/home_search_btn"
            app:layout_constraintEnd_toStartOf="@id/home_search_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_search_btn"
            tools:ignore="LabelFor,TextFields"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="@dimen/no_dimen"
            android:layout_height="@dimen/no_dimen"
            app:items="@{vm.items}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_search_btn"
            app:visible="@{!vm.isLoading}"/>

        <TextView
            android:layout_width="@dimen/no_dimen"
            android:layout_height="@dimen/no_dimen"
            android:gravity="center"
            android:text="@string/home_loading_placeholder"
            android:textColor="@color/home_placeholder_textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_search_btn"
            app:visible="@{vm.isLoading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>